page {
  padding-bottom: 90rpx;
}

.swiper swiper {
  width: 100%;
  height: 60vw;
}

.swiper swiper swiper-item {
  width: 100%;
}

.swiper swiper swiper-item navigator {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.swiper swiper swiper-item navigator image {
  width: 60%;
}

.goods_detail {
  padding-bottom: 6rpx;
  border-bottom: 18rpx solid rgba(128, 128, 128, 0.116);
}

.goods_detail .price {
  color: #eb4500;
  width: 100%;
  font-size: 34rpx;
  font-weight: 700;
  line-height: 80rpx;
}

.goods_detail .content {
  display: flex;
}

.goods_detail .content .name {
  flex: 6;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-right: 15rpx;
  border-right: 2px solid #656668;
}

.goods_detail .content .collect {
  flex: 1;
  text-align: center;
}

.tuwen {
  color: #eb4500;
  font-size: 36rpx;
  font-weight: 800;
  height: 100rpx;
  padding: 20rpx 0 0 20rpx;
  width: 100%;
}

.bottom {
  background-color: #fff;
  height: 90rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.bottom .item {
  flex: 1.5;
  text-align: center;
  margin-top: 10rpx;
  position: relative;
}

.bottom .item button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: transparent;
}

.bottom .item2 {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

.bottom .add {
  background-color: #facc36;
}

.bottom .buy {
  background-color: #eb4444;
}
